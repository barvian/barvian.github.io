{
  "name": "barvian",
  "version": "0.0.0",
  "description": "Personal portfolio.",
  "private": "true",
  "scripts": {
    "bower": "bower install",
    "postinstall": "npm run bower",
    "clean": "rm -rf _includes/sprites.svg; rm -rf _site",
    "prebundle": "mkdir -p dist/elements",
    "sprites": "svgo -q -f _sprites -o _sprites && svg-sprite-generate -d _sprites -o _includes/sprites.svg",
    "sprites:watch": "onchange '_sprites/*.svg' -- npm run sprites",
    "sprites:add": "git add _includes/sprites.svg",
    "assets": "npm run sprites",
    "assets:watch": "npm run sprites:watch",
    "prebuild": "npm run assets",
    "build": "jekyll build",
    "prestart": "npm run assets",
    "start": "concurrently 'npm run assets:watch' 'jekyll serve --incremental'"
  },
  "precommit": [
    "clean",
    "bower",
    "assets",
    "sprites:add"
  ],
  "devDependencies": {
    "bower": "^1.8.0",
    "concurrently": "^3.4.0",
    "onchange": "^3.2.1",
    "pre-commit": "^1.2.2",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.2"
  }
}
